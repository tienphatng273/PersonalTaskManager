<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".features.calendar_events.screens.CalendarMonthActivity">

    <!-- Tiêu đề tháng + nút next/prev -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_prev_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/feature_calendar_ic_arrow_left"
            android:tint="@color/calendar_primary" />

        <TextView
            android:id="@+id/tv_month_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 2025"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp" />

        <ImageButton
            android:id="@+id/btn_next_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/feature_calendar_ic_arrow_right"
            android:tint="@color/calendar_primary" />
    </LinearLayout>

    <!-- Lưới ngày -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_calendar_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <!-- Text hiển thị ngày đã chọn -->
    <TextView
        android:id="@+id/tv_selected_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Công việc ngày: YYYY-MM-DD"
        android:textSize="16sp"
        android:textColor="@color/calendar_text_default"
        android:layout_marginTop="24dp" />

</LinearLayout>
