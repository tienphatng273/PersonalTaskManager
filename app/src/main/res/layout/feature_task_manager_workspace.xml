<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_icon_bg"
    android:padding="8dp">

    <!-- TOP BAR WITH TASK TITLE + DEADLINE -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:paddingStart="16dp"
            android:paddingEnd="24dp">

            <!-- BACK BUTTON -->
            <ImageButton
                android:id="@+id/btn_back_ws"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/feature_calendar_ic_arrow_left"
                app:tint="@color/task_icon_tint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- TASK TITLE -->
            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Task title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/btn_back_ws"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- TASK DEADLINE -->
            <TextView
                android:id="@+id/tv_task_deadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2025-12-08"
                android:textSize="14sp"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="@id/tv_task_title"
                app:layout_constraintTop_toBottomOf="@id/tv_task_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



    <!-- TOOLBAR WITH CHIPS -->
    <HorizontalScrollView
        android:id="@+id/scroll_layout_tools"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/card_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layout_tools"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp">

            <!-- Paragraph -->
            <com.google.android.material.chip.Chip
                android:id="@+id/btn_add_paragraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Add paragraph"
                android:textColor="@color/task_icon_tint"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/task_icon_tint"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="12dp"/>

            <!-- Todo -->
            <com.google.android.material.chip.Chip
                android:id="@+id/btn_add_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Add todo"
                android:textColor="@color/task_icon_tint"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/task_icon_tint"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="12dp"/>

            <!-- Bullet -->
            <com.google.android.material.chip.Chip
                android:id="@+id/btn_add_bullet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Add bullet"
                android:textColor="@color/task_icon_tint"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/task_icon_tint"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="12dp"/>

            <!-- Divider -->
            <com.google.android.material.chip.Chip
                android:id="@+id/btn_add_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add divider"
                android:textColor="@color/task_icon_tint"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/task_icon_tint"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="12dp"/>

        </LinearLayout>
    </HorizontalScrollView>



    <!-- WORKSPACE LIST -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_workspace_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_layout_tools"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_workspace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="true"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
