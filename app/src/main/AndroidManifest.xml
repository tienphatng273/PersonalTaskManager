<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ========================================================= -->
    <!-- PERMISSIONS — tránh crash khi chọn file / mở file         -->
    <!-- ========================================================= -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Storage (Android 12 trở xuống) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Android 13+ permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalTaskManager"
        tools:targetApi="31">

        <!-- ========================================================= -->
        <!-- FILE PROVIDER — để mở file không crash (bắt buộc)        -->
        <!-- ========================================================= -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- ========================================================= -->
        <!--  MAIN ENTRY — MainActivity check AutoLogin               -->
        <!-- ========================================================= -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!-- ========================================================= -->
        <!--  AUTHENTICATION MODULE                                    -->
        <!-- ========================================================= -->
        <activity
            android:name=".features.authentication.screens.AuthSplashActivity"
            android:exported="true" />

        <activity
            android:name=".features.authentication.screens.LoginActivity"
            android:exported="true" />

        <activity
            android:name=".features.authentication.screens.RegisterActivity"
            android:exported="true" />

        <activity
            android:name=".features.authentication.screens.ForgotPasswordActivity"
            android:exported="true" />

        <!-- ========================================================= -->
        <!--  NAVIGATION ACTIVITY (Fragment container)                -->
        <!-- ========================================================= -->
        <activity
            android:name=".features.navigation.NavigationActivity"
            android:exported="true"
            android:theme="@style/Theme.PersonalTaskManager" />

        <!-- ========================================================= -->
        <!--  TASK MANAGER MODULE                                    -->
        <!-- ========================================================= -->
        <activity
            android:name=".features.task_manager.screens.TaskManagerMainActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskManager" />

        <activity
            android:name=".features.task_manager.screens.TaskListActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskManager" />

        <activity
            android:name=".features.task_manager.screens.TaskDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskManager" />

        <activity
            android:name=".features.task_manager.screens.workspace.TaskWorkspaceActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskManager" />

        <!-- ========================================================= -->
        <!--  CALENDAR EVENTS MODULE                                   -->
        <!-- ========================================================= -->
        <activity
            android:name=".features.calendar_events.screens.CalendarMonthActivity"
            android:exported="false" />

        <!-- ========================================================= -->
        <!--  ADMIN MODULE (Fragment -> không cần khai báo)           -->
        <!-- ========================================================= -->
        <!-- AdminFragment KHÔNG cần thêm ở đây                       -->

    </application>

</manifest>
